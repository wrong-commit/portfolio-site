<style>
  .document_display_box{
		border-color: <%= c1 %>; /* c1 */
		border-width: 2px;
		border-style: solid;
		padding:15px;
		margin:5px;
		margin-right:5px;
		
		flex-grow: 1;
		font-family: monospace;
		line-height: 125%;
		color: <%= c4 %>; /* c4 */
		background-color: <%= c1 %>; /* c1 */

		white-space: pre-wrap;       /* css-3 */
		white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
		white-space: -pre-wrap;      /* Opera 4-6 */
		white-space: -o-pre-wrap;    /* Opera 7 */
		word-wrap: break-word;       /* Internet Explorer 5.5+ */

		font-family: monospace;

		overflow-y: scroll;
	}
	.dir_tree_box {
		color: <%= c5 %>; /* c5 */
		background-color: <% c1 %>; /* c1 */
		border: 2px solid <%= c1 %>; /* c1 */
		margin:5px;
		padding:10px; /* internal padding of directory listing box */
		max-width: 18%; min-width: 18%;
		white-space: nowrap;
		list-style-type: none;
		overflow-x: scroll;
		line-height: 150%;
		font-family: Roboto, "sans-serif";
	}
	.dir_open {
		color: <%= c5 %>; /* c5 */
		list-style-type: inherit;
		padding-left:inherit; /* initial padding for item */
	}
	.dir_closed {
		color: <%= c5 %>; /* c5 */
		list-style-type: inherit;
		padding-left:inherit; /* initial padding for item */
	}
	.doc_test {
		padding-left:inherit; /* initial padding for item */
	}
	.dir_open > li {
		padding-left:5%;
	}
	.dir_open > li::before {
    color: rgb(0,0,0); <%= c6 %>; /* c2 */
		font-weight: 900; 
		content: "|- " !important;
	}
	.dir_tree_box li:hover {		
		font-weight: bold;
	}
	.dir_tree_box span:hover {
		font-weight: bold;
	}
	.dir_closed li {
		display: none;
	}
	.dir_closed ul {
		display: none;
	}
	.dir_closed::before {
		color: <%= c6 %>; /* c0 */
		font-family: "Font Awesome 5 Free" !important; 
		font-weight: 900 !important; 
		content: "\f07b" !important;
		/* 10px, and 2px for open dir  */
		padding-right: calc(5px + 2px); /*for the icon*/
	}
	.dir_open::before {
		color: <%= c6 %>; /* c0 */
		font-family: "Font Awesome 5 Free" !important; 
		font-weight: 900 !important; 
		content: "\f07c" !important;
		padding-right: 5px; /*for the icon*/
	}
	@media screen and (max-width: 1000px) { /* laptops */
		.document_display_box { /* font-size: 24px; */ }
		.dir_tree_box { line-height: 150%; min-width: 25%; max-width: 25%; padding:10px }
		.dir_tree_box ul { /* font-size: 24px*/ }
		.dir_tree_box ul::after{ margin-left: 50px; }
		.dir_tree_box li { /* font-size: 24px  */ }
  }
  #chosenone {
    font-weight:bold;
  }
